<div class="main">
  <div class="container">
    <h1>All pending sick notes</h1>
    <p>Below are all pending sick notes awaiting validation</p>

    <% @notes.each do |n| %>
    <% if n.is_fraudulent == nil%>
		<div class="note">
			<div class = "sec">
				<image><%= image_tag n.image %></image>
		    </div>
		    <div class="sec" id="sec-text">
		    	<p><a>Client: </a><%= n.client.company %></p>
		        <p><a>Employee: </a><%= n.employee %></p>
		        <p><a>Doctor: </a><%= n.doctor %></p>
		        <p><%= link_to "See More", note_path(n) %></p>   
			</div>
		</div>
	<% end %>
	<% end %>

  </div>
</div>